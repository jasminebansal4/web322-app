<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <!-- Add Category Button -->
        <a href="/categories/add" class="btn btn-primary mb-3">Add Category</a>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th></th> 
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/items?category={{id}}">{{id}}</a></td>
                        <td><a href="/items?category={{id}}">{{category}}</a></td>
                        <td>
                            <!-- Add a "Remove" button -->
                            <a href="/categories/delete/{{id}}" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Message if no categories are available -->
<div class="col-md-12 text-center">
    <strong>{{message}}</strong>
</div>
