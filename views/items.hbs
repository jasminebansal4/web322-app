<div class="row">
  <div class="col-md-12">
    <h2>Items</h2>
    <a href="/items/add" class="btn btn-success pull-right">Add Post</a>

    <hr />
    
    <div class="table-responsive">
      {{#if items}}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Price</th>
              <th>Category</th>
              <th>Published</th>
              <th></th> <!-- Empty header for the "Remove" button -->
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{#formatDate this.postDate}}{{/formatDate}}</td> <!-- Use formatDate helper -->
                <td>{{this.price}}</td>
                <td>
                  <!-- Ensure category_id and category_name exist in each item object -->
                  <a href="/items?category={{this.category_id}}">
                    {{this.category}}
                  </a>
                </td>
                <td>{{#if this.published}}True{{else}}False{{/if}}</td>
                <td>
                  <!-- Add a "Remove" button -->
                  <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <!-- Display this message if no items are available -->
        <div class="col-md-12 text-center">
          <strong>{{message}}</strong>
        </div>
      {{/if}}
    </div>
  </div>
</div>
